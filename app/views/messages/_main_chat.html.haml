.chat-main
  .main-header
    .main-header__leftbox
      %h2.main-header__leftbox__current-group
        test01
      %ul.main-header__leftbox__member-list
        Member :
        %li.main-header__leftbox__member-list__member
          aaa
    = link_to "#", class: "main-header__edit-btn" do
      Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__text", placeholder: "type a message"
        = f.label :image, class: "input-box__image" do
          = icon('far', 'image', class: "icon")
          = f.file_field :image, class: "input-box__image__file"
      = f.submit "Send", class: "submit-btn"